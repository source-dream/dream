<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/settings_bg">

        <ImageView
            android:id="@+id/list_task_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="18dp"
            android:scaleType="fitXY"
            android:src="@drawable/checkbox_false" />

        <TextView
            android:id="@+id/list_task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/list_task_icon"
            android:text="任务名称"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/list_task_deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/list_task_icon"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@id/list_task_icon"
            android:layout_toRightOf="@id/list_task_icon"
            android:text="截至日期"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/list_task_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="23dp"
            android:text="重要程度"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:textSize="15sp" />

    </RelativeLayout>


</RelativeLayout>